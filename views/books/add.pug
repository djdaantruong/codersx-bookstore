extends ../layouts/common
block nav
  include ../layouts/nav
block content
  a(href="/books/see" style="text-decoration: none;") Back
  h3.py-3 Create New Books
  form(action="/books/add", method="POST", enctype="multipart/form-data")
    .form-group.row
      label(for='title').col-sm-2.col-form-label Title
      .col-sm-10
        input.form-control(name="title", type="text")
    .form-group.row
      label(for='description').col-sm-2.col-form-label Descripttion
      .col-sm-10
        input.form-control(name="description", type="text")
    .form-group.row
      label(for='cover').col-sm-2.col-form-label Cover
      .col-sm-10
        input#cover.form-control-file(name="coverUrl", type="file")
        
    button.btn.btn-success.mt-4 Create